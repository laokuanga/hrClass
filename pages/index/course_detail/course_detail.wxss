.video_box{
  width: 100%;
  height: 422rpx;
}
.detail_box_info{
  padding: 30rpx;
}
.box_info_title{
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;  
}
.box_info_tag_box{
  display: flex;
  align-items: center;
}
.tag_item{
  padding: 10rpx 15rpx;
  background-color: #EAF1FD;
  text-align: center;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #3176EA;
  border-radius: 20rpx;
  margin-right: 20rpx;
}
.box_info_price_box{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 40rpx;
}
.box_price{
font-size: 36rpx;
font-family: Bahnschrift;
font-weight: bold;
color: #333333;
}
.box_class{
font-size: 24rpx;
font-family: PingFang SC;
font-weight: 500;
color: #333333;
}
.box_info_time_box{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.box_time{
font-size: 24rpx;
font-family: PingFang SC;
font-weight: 500;
color: #999999;
}
.box_name{
font-size: 24rpx;
font-family: PingFang SC;
font-weight: 500;
color: #999999;
}
.name{
font-weight: bold;
color: #000000;
}
/* 边框 */
.page_border{
  background-color: #F3F7F6;
  height: 20rpx;
  width: 100%;
}





/* navbar */
.nav_bar_box{
  display: flex;
  align-items: center;
  padding: 30rpx 30rpx 0 30rpx;
  justify-content: space-between;
}
  .nav_bar_border{
  width: 100%;
  height: 2rpx;
  background: #00B074;
  opacity: 0.2;
  }
  .box_item{
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    color: #666666;
  }
  .active_item{
    color: #000000;
  }
  .active_border{
    width: 30rpx;
    height: 3px;
    background: #00B074;
    margin-top: 5rpx;
    color: #333333;  
  }
  .foot_content_box{
    padding: 30rpx;
  }
   
  /* 下方支付框 */
  .foot_pay_btn{
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    align-items: center;
    background-color: #FFFFFF;
    height: 150rpx;
    padding: 0 30rpx;
  }
  .btn_left{
    display: flex;
    align-items: center;
    flex: 2;
  }
  .right_box{
    display: flex;
    align-items: center;
  }
  .left_box{
    display: flex;
    align-items: center;
  }
  .right_box{
    display: flex;
    align-items: center;
    margin-left: 35rpx;
  }
  .com_icon{
    width: 30rpx;
    height: 29rpx;
    margin-right: 20rpx;
  }
  .btn_right{
    flex: 1;
    width: 300rpx;
    height: 88rpx;
    background: #37AC73;
    border-radius: 20rpx;
    text-align: center;
    font-size: 32rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: #FFFFFF;
    line-height: 88rpx;
  }
  /* 课程章节 */
  .section_title{
    display: flex;
    align-items: center;
  }
  .box_left_icon{
    width: 20rpx;
    height: 20rpx;
    background-color: #37AC73;
    border-radius: 50%;
  }
  .box_right_title{ 
    font-size: 26rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: #999999;
    margin-left: 30rpx;
  }
  .sectioni_center_box{
    border-left: 2rpx dashed  #37AC73;
    margin-left: 8rpx;
    padding: 30rpx;
    box-sizing: border-box;
  }
  .zoom:last-child .sectioni_center_box{
    border-left: none;
  }

  .sectioni_item{
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 620rpx;
    height: 116rpx;
    background: #FFFFFF;
    border-radius: 20rpx;
    box-shadow:0px 0px  10px 0px #cccccc;
    padding: 30rpx;
    box-sizing: border-box;
  }
  .sectioni_left_icon{
    width: 48rpx;
    height: 48rpx;
    margin-right: 30rpx;
  }
  .sectioni_item_left{
    display: flex;
    align-items: center;
  }
  .sectioni_item_left_text{
    font-size: 30rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: #333333;
    
  }
  .sectioni_item_right{
    font-size: 26rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: #37AC73;
  }
  /* 评价 */
  .evaluate_item_box{
    display: flex;
    align-items: flex-start;
    margin-bottom: 30rpx;
  }
  .evaluate_item_left{
    width: 100rpx;
  }
  .evaluate_left_img{
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
  }
  .evaluate_item_right{
    flex: 1;
  }
  .evaluate_item_name{
    font-size: 30rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: #333333; 
  }
  .evaluate_item_time{
    font-size: 22rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: #999999;
  }
  .evaluate_item_info{
    margin-top: 20rpx;
    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: 500;
    color: #333333;
  }
  /* 评价输入框 */
  .pay_ok_input{
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 150rpx;
    background: #FFFFFF;
    box-shadow: 0px 0px 40rpx 0px rgba(0, 0, 0, 0.07);
    padding: 30rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .input{
    width: 520rpx;
    height: 88rpx;
    background: #F5F5F5;
    border-radius: 20rpx;
  }
  .set_btn{
    width: 140rpx;
    height: 88rpx;
    background: #37AC73;
    border-radius: 20rpx;
    text-align: center;
    font-size: 32rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: #FFFFFF;
    line-height: 88rpx;


  }