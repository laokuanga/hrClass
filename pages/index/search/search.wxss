
.search_box{
  background-color: #ffffff;
  padding: 10rpx 30rpx;
  border-bottom: 1rpx solid #cccccc;
}
.box_top{
  display: flex;
  align-items: center;
  background-color: #ffffff;
  width: 100%;
  height: 88rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.top_left{
  flex: 4;
}
.left_input{
  background-color: #F5F5F5;
  height: 66rpx;
  width: 100%;
  border-radius: 30rpx;
}
.top_right{
  flex: 1;
  width: 100rpx;
  height: 66rpx;
  background: #37AC73;
  border-radius: 33rpx;
  text-align: center;
  line-height: 66rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
  margin-left: 20rpx;
}