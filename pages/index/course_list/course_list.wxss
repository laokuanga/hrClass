page{
  background-color: #F5F5F5;
  min-height: 100vh;
}
.box_top{
  width: 100%;
  height: 88rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.box_left{
  width: 570rpx;
  height: 66rpx;
  background: #F5F5F5;
  border-radius: 33rpx;
  display: flex;
  align-items: center;
}
.left_icon{
  width: 28rpx;
  height: 28rpx;
  margin-left: 30rpx;
}
.left_input{
  margin-left: 40rpx;
}
.box_right{
  display: flex;
  align-items: center;
}
.right_icon{
  width: 28rpx;
  height: 28rpx;
  margin-right: 15rpx;
}
.right_text{
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #37AC73;

}

.list_box{
  background-color: #ffffff;
  padding: 10rpx 30rpx;
  border-bottom: 1rpx solid #cccccc;
}
/* 筛选弹框 */
.screen_pop_box{
  position: fixed;
  top: 88rpx;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}
.pop_box_center{
  background-color: #ffffff;
  width: 100%;
}
.select_tag{
  padding: 30rpx;

}
.box_center_title{
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #333333;
}
.tag_box{
  display: flex;
  align-items: center;

  flex-wrap: wrap;
}
.box_item{
  padding: 10rpx 10rpx;
  border-radius: 25rpx;
  background-color: #F5F5F5;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 20rpx;
  margin: 20rpx 20rpx 20rpx 0;
}
.active_item{
  background: #3176EA;
  color: #ffffff;
}
.submit_btn{
  width: 100%;
  height: 88rpx;
  background: #37AC73;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 88rpx;
  text-align: center;
}