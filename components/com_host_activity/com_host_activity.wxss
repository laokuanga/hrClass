page{
  background-color: #F8F8F8;
  min-height: 100vh;
}
.com_host_activity_box{
  padding: 0 30rpx;
}
.host_activity_item{
  background-color: #ffffff;
  margin-top: 20rpx;
  border-radius: 30rpx;
}
.activity_item_img{
  width: 690rpx;
  height: 520rpx;
  border-radius: 30rpx 30rpx 0 0;
}
.activity_item_brif{
  background-color: #ffffff;
  border-radius: 0 0 30rpx 30rpx;
  padding: 30rpx;
}
.item_brif_title{
font-size: 34rpx;
font-family: PingFang SC;
font-weight: bold;
color: #333333;
}
.item_brif_tiem_text{
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #666666;
  margin-top: 40rpx;
}
.item_brif_tiem_box{
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #666666;
}
.item_brif_tiem_box{
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}
.brif_tiem_box_right{
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  font-weight: bold;
  color: #333333;
}